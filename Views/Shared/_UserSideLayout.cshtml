                        }
                        else {
                            $('#nameErrMsg').text("");

                            $('#nameErrMsg').text("Username already exist");
                            $('#username').val("");
                            $('#RegisterForm').attr('disabled', true);
                        }
                    },
                    error: function () {
                        $('#nameErrMsg').text("");
                        $('#RegisterForm').attr('disabled', false);
                        alert("Ajax failed");
                    }
                });
            }

        }

